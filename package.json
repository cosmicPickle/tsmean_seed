{
  "name": "server.api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "report": "chromium-browser coverage/index.html > /dev/null 2>&1 &",
    "test": "NODE_ENV=development npm run test:server",
    "test:server": "NODE_ENV=development nyc mocha -r ts-node/register --timeout=120000 '**/*.spec.ts' && npm run report",
    "utest:server": "NODE_ENV=development mocha -r ts-node/register --timeout=120000",
    "watch:server": "webpack --watch --mode=development --config server/webpack.config.js",
    "start": "concurrently \"npm run server:dev\" \"npm run watch:server\" ",
    "server:dev": "webpack --mode=development --config server/webpack.config.js && nodemon server/dist/index.js",
    "prod": "webpack --mode=production && nodemon dist/index.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/joi": "^13.0.8",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "express": "^4.16.3",
    "joi": "^13.2.0",
    "jsonwebtoken": "^8.2.0",
    "mongodb": "^3.0.5",
    "mongoose": "^5.0.11",
    "path-to-regexp": "^2.2.0",
    "winston": "^2.4.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.20",
    "@types/chai": "^4.1.2",
    "@types/express": "^4.11.1",
    "@types/mocha": "^5.0.0",
    "@types/mongodb": "^3.0.9",
    "@types/mongoose": "^5.0.7",
    "@types/sinon": "^4.3.0",
    "@types/winston": "^2.3.9",
    "chai": "^4.1.2",
    "clean-webpack-plugin": "^0.1.19",
    "mocha": "^5.0.5",
    "nodemon": "^1.17.2",
    "nyc": "^11.6.0",
    "sinon": "^4.4.8",
    "ts-loader": "^4.1.0",
    "ts-node": "^5.0.1",
    "typescript": "^2.7.2",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.12"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "**/*.ts"
    ],
    "exclude": [
      "**/*.spec.ts",
      "server/src/configuration",
      "server/src/index.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
